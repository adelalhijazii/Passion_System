@model Passion.Areas.Admin.ViewModels.MasterFeaturesViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="text-start">
            <h1 class="fw-bolder">New Features</h1>
        </div>
    </div>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MasterFeaturesId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeaturesIcon" class="form-label"></label>
                <input asp-for="MasterFeaturesIcon" class="form-control" placeholder="Enter Icon" />
                <span asp-validation-for="MasterFeaturesIcon" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeaturesTitle" class="form-label"></label>
                <input asp-for="MasterFeaturesTitle" class="form-control" placeholder="Enter Title" />
                <span asp-validation-for="MasterFeaturesTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeaturesBreef" class="form-label"></label>
                <textarea asp-for="MasterFeaturesBreef" class="form-control" rows="4" placeholder="Enter Breef"></textarea>
                <span asp-validation-for="MasterFeaturesBreef" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterFeaturesNumber" class="form-label"></label>
                <input asp-for="MasterFeaturesNumber" class="form-control" placeholder="Enter Number" />
                <span asp-validation-for="MasterFeaturesNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end m-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
