@model Passion.Areas.Admin.ViewModels.MasterServiceViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row mb-3">
    <div class="col-12">
        <div class="text-start">
            <h1 class="fw-bolder">New AboutUs</h1>
        </div>
    </div>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="MasterServiceId" class="form-control" type="hidden" value="0" />
    <div class="row m-0">
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterServiceProjectsCompleted" class="form-label"></label>
                <textarea asp-for="MasterServiceProjectsCompleted" class="form-control" placeholder="Enter ProjectsCompleted"></textarea>
                <span asp-validation-for="MasterServiceProjectsCompleted" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterServiceClientSatisfaction" class="form-label"></label>
                <textarea asp-for="MasterServiceClientSatisfaction" class="form-control" placeholder="Enter ClientSatisfaction"></textarea>
                <span asp-validation-for="MasterServiceClientSatisfaction" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterServiceSupportAvailable" class="form-label"></label>
                <textarea asp-for="MasterServiceSupportAvailable" class="form-control" placeholder="Enter SupportAvailable"></textarea>
                <span asp-validation-for="MasterServiceSupportAvailable" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4 mb-3">
            <div class="form-group">
                <label asp-for="MasterServiceYearsExperience" class="form-label"></label>
                <textarea asp-for="MasterServiceYearsExperience" class="form-control" placeholder="Enter YearsExperience"></textarea>
                <span asp-validation-for="MasterServiceYearsExperience" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="text-end m-3">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
