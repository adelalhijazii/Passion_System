<script>
    function previewWelcomeNoteImageUrl(input) {
        const WelcomeNoteImageUrl = document.getElementById('WelcomeNoteImageUrl');
        const file = input.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                WelcomeNoteImageUrl.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    }

    function previewAboutImageUrl(input) {
        const AboutImageUrl = document.getElementById('AboutImageUrl');
        const file = input.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                AboutImageUrl.src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    }
</script>
